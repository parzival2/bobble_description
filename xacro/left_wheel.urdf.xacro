<?xml version="1.0" ?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="left_wheel" params="parent">

	<link name="left_wheel_link">
		<inertial>
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi}"/>
			<mass value="0.084"/>
			<inertia ixx="0.00035" ixy="0.0" ixz="0.0" iyy="0.00035" iyz="0.0" izz="0.00035"/>
		</inertial>
		<visual>
			<origin xyz="-0.0275 -0.0135 -0.0275" rpy="0.0 0.0 0.0"/>
			<geometry name="left_wheel_link_visual">
  				<mesh filename="package://bobble_description/meshes/wheel.dae" scale="0.001 0.001 0.001"/>
			</geometry>
  		</visual>
		<collision>
			<origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
              <cylinder radius="0.0275" length="0.027" />
            </geometry>
			<contact_coefficients kd="1.0" kp="1000.0" mu="0"/>
		</collision>
	</link>

	<gazebo reference="left_wheel_link">
		<selfCollide>false</selfCollide>
	</gazebo>

	<joint name="left_wheel_hinge" type="continuous">
		<parent link="${parent}"/>
		<child link="left_wheel_link"/>
		<origin rpy="0 0 0" xyz="0.0 0.06995 0.01375"/>
		<axis xyz="0 1 0"/>
		<!-- <safety_controller k_velocity="0.5"/> -->
		<!-- <joint_properties damping="100.0" friction="1000.0" /> -->
    	<dynamics damping="0.0" friction="0.0"/>
	</joint>

	<transmission name="left_wheel_transmission">
		<type>transmission_interface/SimpleTransmission"</type>
		<joint name="left_wheel_hinge">
			<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
		</joint>
		<actuator name="left_wheel_motor">
			<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			<mechanicalReduction>1</mechanicalReduction>
		</actuator>
	</transmission>

  </xacro:macro>

</robot>
